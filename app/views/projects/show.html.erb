<article class="container">
  <h1><%= @project.name %></h1>
  <h3>Status: <%= project_status(@project.finished) %></h3>
  <%= image_tag(@project.image_file_name) %>
  <p><%= simple_format(@project.summary) %></p>

  <% if current_user_admin? %>
    <div>
      <h3>Admin Options</h3>
      <%= link_to "Edit", edit_project_path(@project), class: "btn btn-primary" %>
      <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  <% end %>
</article>