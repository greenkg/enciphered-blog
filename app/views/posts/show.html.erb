<article class="container">
  <h1><%= @post.title %></h1>
  <h4>Published on: <%= @post.published_on.strftime("%A %m/%d/%Y") %></h4>
  <h5>Author: <%= @post.author %></h5>
  <h5>Topics:</h5>
  <ul>
    <% @topics.each do |topic| %>
      <li>
        <%= topic.name %>
      </li>
    <% end %>
  </ul>
  <%= image_tag(@post.image_file_name) %>
  <p><%= markdown(@post.body) %></p>
  <p><%= link_to pluralize(@post.comments.size, "comment"), post_comments_path(@post) %>   <%= pluralize(@likers.size, "Like") %></p>

  <div>
    <% if current_user %>
      <% if @current_like %>
        <%= link_to "Unlike Post", post_like_path(@post, @current_like), method: :delete, class: "btn btn-danger" %>
      <% else %>
        <%= link_to "Like Post", post_likes_path(@post), method: :new, class: "btn btn-success" %>
      <% end %>
      <%= link_to "Write Comment", new_post_comment_path(@post), class: "btn btn-primary" %>
    <% else %>
      <p class="text-muted">Must be <%= link_to "signed in", new_session_path %> to leave a comment or like a post.</p>
    <% end %>
    <br/>
  </div>

  <% if @comments.any? %>
    <div>
      <h3>Comments</h3>
      <div>
        <% @comments.each do |comment| %>
          <div>
            <%= profile_image_for(comment.user, size: 35) %>
            <%= link_to comment.user.username, comment.user %>
            <%= comment.comment %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  

  <% if current_user_admin? %>
    <div>
      <h3>Admin Options</h3>
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  <% end %>

</article>