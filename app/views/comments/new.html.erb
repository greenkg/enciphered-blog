<article>

	<h1>Leave a comment on <%= link_to(@post.title, @post) %></h1>

	<%= form_for([@post, @comment]) do |f| %>
	  <%= render "shared/errors", object: @comment %>
	  <p class="required">
	    <%= f.label :name %><br/>
	    <%= f.text_field :name, autofocus: true %>
	  </p>
	  <p class="required">
	    <%= f.label :email %><br/>
	    <%= f.text_field :email %>
	  </p>
	  <p class="required">
	    <%= f.label :comment %><br/>
	    <%= f.text_field :comment %>
	  </p>
	  <p>
	    <%= f.submit 'Post Comment' %>
	    <%= link_to "Cancel", @post, class: 'button' %>
	  </p>
	<% end %>

</article>